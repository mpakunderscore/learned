{
	"manifest_version": 2,

	"name": "learned.space",
	"description": "",
	"version": "0.3",

    "background": {
      	"scripts": ["js/api.js", "js/background.js"]
    },

    "icons": { "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png" },

	"browser_action": {
		"default_icon": "icon.png",
        "default_title": "Save page"
	},

	"permissions": [
        "bookmarks",
        "http://*/*",
        "https://*/*",
        "notifications",
        "activeTab",
        "http://localhost:8080/*"]
}
